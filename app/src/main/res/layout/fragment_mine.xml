<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="50dp">

            <ImageView
                android:id="@+id/avatarIv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/nicknameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avatarIv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="nickname" />

            <TextView
                android:id="@+id/descriptionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nicknameTv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="description" />

            <View
                android:id="@+id/infoLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/descriptionTv"
                android:layout_marginTop="10dp"
                android:background="#999" />

            <TextView
                android:id="@+id/messageTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infoLine"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="message" />

            <TextView
                android:id="@+id/collectionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageTv"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="collection" />

            <TextView
                android:id="@+id/settingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collectionTv"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="setting" />

            <TextView
                android:id="@+id/feedbackTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingTv"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="feedback" />

            <TextView
                android:id="@+id/aboutTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedbackTv"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="about" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>